{{#> admin}}
  {{#*inline "content"}}
    <link rel="stylesheet" href="/css/admin/books/editt.css">
    <div class="dialog-container">
      <dialog open class="modal" id="modal">
        <div class="form-body">
          {{#with viewData.book}}
            <form action="/admin/books/{{getId}}/update" method="post" enctype="multipart/form-data">
              <div class="form-header">
                Edit book
              </div>
              <div class="names">
                <div class="firstname">
                  <label for="title">Title</label><br>
                  <input type="text" name="title" id="title" value="{{getTitle}}" placeholder="Title">
                </div>
                <div class="lastname">
                  <label for="author">Author</label><br>
                  <input type="text" name="author" id="author" value="{{getAuthor}}" placeholder="Author">
                </div>
              </div>
              <div>
                <label for="about">About</label><br>
                <input type="text" name="about" id="about" value="{{getAbout}}" placeholder="Description">
              </div>
              <div>
                <label for="year">Year</label><br>
                <input type="text" name="year" id="year" value="{{getYearPublished}}" placeholder="Year Published">
              </div>
              <div>
                <label for="genre">Genre</label><br>
                <input type="text" name="genre" id="genre" value="{{getGenre}}" placeholder="Genre">
              </div>
              <div>
                <label for="image">Book Cover</label><br>
                <input type="file" name="image" id="image" value="{{getImage}}" placeholder="image">
              </div>
              <div>
                <label for="code">Book Code</label><br>
                <input type="text" name="code" id="code" value="{{getCode}}" placeholder="Code">
              </div>
              <div>
                <label for="availability">Availability</label><br>
                <input type="text" name="availability" id="availability" value="{{#if getAvailability}}{{getAvailability}}{{else}}Not Defined{{/if}}" placeholder="Availability">
              </div>
              <div>
                <input type="submit" value="Update Book">
              </div>
            </form>
          {{/with}}
        </div>
      </dialog>
    </div>
  {{/inline}}
{{/admin}}