{{#> admin}}
  {{#*inline "content"}}
    <link rel="stylesheet" href="/css/admin/books.css">
    <div class="admin-books">
      <div class="book-table">
        <div class="book-table-head">
          <h2>Books List</h2>
          <a href="/admin/books">Add Book</a>
        </div>
        <div class="book-table-table">
          <table class="">
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Title</th>
                <th scope="col">Author</th>
                <th scope="col">Code</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
              </tr>
            </thead>
              <tbody>
                {{#each viewData.books}}
                  <tr>
                    <td>{{getId}}</td>
                    <td>{{getTitle}}</td>
                    <td>{{getAuthor}}</td>
                    <td>{{getCode}}</td>
                    <td><a class="btn btn-primary" href="/admin/users/{{getId}}">
                        <i class="bi-pencil"></i>
                      </a>
                    </td>
                    <td>
                      <form action="/admin/users/{{getId}}" method="POST">
                        <button class="btn btn-danger">
                          <i class="bi-trash"></i>
                        </button>
                      </form>
                    </td>
                  </tr>
                {{/each}}
              </tbody>
          </table>
        </div>
      </div>
      <div class="form-body">
        <form action="/admin/users" method="post">
          <div class="names">
            <div class="firstname">
              <input type="text" name="title" id="title" placeholder="Title">
            </div>
            <div class="lastname">
              <input type="text" name="author" id="author" placeholder="Author">
            </div>
          </div>
          <div>
            <input type="text" name="about" id="about" placeholder="Description">
          </div>
          <div>
            <input type="text" name="year" id="year" placeholder="Year Published">
          </div>
          <div>
            <input type="text" name="genre" id="genre" placeholder="Genre">
          </div>
          <div>
            <input type="file" name="image" id="image" placeholder="image">
          </div>
          <div>
            <input type="submit" value="Create Book">
          </div>
        </form>
      </div>
    </div>
  {{/inline}}
{{/admin}}